<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:labelFor="@+id/txt_event_title"
                android:text="@string/event_title"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <EditText
                android:id="@id/txt_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <ImageButton android:contentDescription="@string/clock_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@drawable/clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="30dp"
                android:text="@string/all_day"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Switch
                android:id="@+id/all_day_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="20dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="30dp"
                android:layout_weight="2"
                android:labelFor="@+id/txt_event_start_time"
                android:text="@string/event_start_time"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/txt_event_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/bg_datetime_view"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@id/txt_event_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_datetime_view"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="30dp"
                android:layout_weight="2"
                android:labelFor="@+id/txt_event_end_time"
                android:text="@string/event_end_time"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/txt_event_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/bg_datetime_view"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@id/txt_event_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_datetime_view"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_more_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/expand_button"
                android:onClick="moreOptionsClick"
                android:src="@drawable/img_more_options" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:onClick="moreOptionsClick"
                android:text="@string/more"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_options_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!--Option: Anticipated stress level-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="stressLvlMoreClick"
                    android:padding="20dp"
                    android:text="@string/anticipated_stress_level"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_margin="17dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/arrow_down"
                    android:onClick="stressLvlMoreClick"
                    android:src="@drawable/arrow_down" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/stress_lvl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/progressBar"
                        android:text="@string/stress_lvl"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <SeekBar
                            android:id="@+id/stressLvl"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:max="2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:labelFor="@+id/progressBar"
                                android:text="@string/low"
                                android:textColor="@color/slvl0_color"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:labelFor="@+id/progressBar"
                                android:text="@string/normal"
                                android:textAlignment="center"
                                android:textColor="@color/slvl1_color"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:labelFor="@+id/progressBar"
                                android:text="@string/high"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/slvl2_color"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_to_be_inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/txt_stress_cause"
                        android:text="@string/stress_type"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/stressor_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_box_view"
                        android:padding="10dp"
                        android:text="@string/positive"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/stressor_negative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_box_view"
                        android:padding="10dp"
                        android:text="@string/negative"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/stressor_dont_know"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_box_view"
                        android:padding="10dp"
                        android:text="@string/unidentified"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:labelFor="@+id/txt_stress_cause"
                        android:text="@string/stress_cause"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <EditText
                        android:id="@id/txt_stress_cause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_solid_wrap"
                        android:gravity="top"
                        android:inputType="text|textMultiLine"
                        android:lines="4"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp" />
                </LinearLayout>

            </LinearLayout>

            <!--Option: Intervention-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="interVentionsClick"
                android:padding="20dp"
                android:text="@string/interventions"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--Option: Repeat / Notification-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/repeat_notification"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--Option: Share-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="20dp" />
            </FrameLayout>

            <!--Option: Evaluation-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/evaluation"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--Option: Feedback-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/feedback"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventActionButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:tag="false"
                android:text="@string/save"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@color/colorPrimary"
                android:onClick="cancelClick"
                android:tag="true"
                android:text="@string/cancel"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>